<div class="container-fluid">
  <div class="row">
    <nav class="header col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <img class="applogo" src="/images/CaretakrWhite.png" alt="" />
      <div class="indexNav">
        <a class="btn home-btn" href="/admin/{{user_id}}/settings">Settings</a>
        <a class="btn home-btn" href="/auth/logout">Logout</a>
        <img class="circleimage" src="{{user.picture_url}}" alt="" />
      </div>
    </nav>
  </div>
</div>

<div class="container-fluid hamburger">
  <div class="row">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            {{#each dependents}}
            <li>
              <a href="/admin/{{this.user_id}}/dependents/{{this.dependents_id}}">{{this.dependent_name}}</a>
            </li>
            {{/each}}
            <li>
              <a href="/admin/{{user_id}}/add">Add new dependent</a>
            </li>
            <li>
              <a href="/admin/{{user_id}}/contacts">Add/update contacts</a>
            </li>
            <li>
              <a href="/admin/{{user_id}}/settings">Settings</a>
            </li>
            <li>
              <a href="/auth/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>

<div class="left">
  <div class="leftnav household">
    <h3><a href="/admin/{{user_id}}/home">Your Household</a></h3>
  </div>
  {{#dependents}}
  <div class="leftnav">
    <h2 class='dependentsId'><a href="/admin/{{user_id}}/dependents/{{dependents_id}}">{{dependent_name}}</a>
      <div class="circleimage2">
    <img src="{{picture_url}}" alt="" />
  </div></h2>
  </div>
  {{/dependents}}

  <div class="leftnav new">
    <i class="fa fa-plus fa-lg"></i>
    <h2 class='dependentsId'><a href="/admin/{{user_id}}/add">Add new dependent</a></h2>  </div>
  <div class="leftnav new">
    <i class="fa fa-plus fa-lg"></i>
    <h2 class='dependentsId'><a href="/admin/{{user_id}}/contacts">Add/update contacts</a></h2>

  </div>
</div>

<div class="right">
  <div class="row">
    <form class="add" action="/admin/{{user_id}}/update/{{dependent_data.dependents_id}}" method="post">
      <h3>Update {{dependent_data.dependent_name}}</h3>
      <label for="being_type">Type</label><br>
      <input type="text" name="being_type" value="{{dependent_data.being_type}}"><br>

      <label for="name">Name</label><br>
      <input type="text" name="dependent_name" value="{{dependent_data.dependent_name}}" required><br>
      <label for="picture_url">Link to a photo (ex:https://myphoto.com)</label><br>
      <input type="text" name="picture_url" value="{{dependent_data.picture_url}}"><br>



      {{#each rules}}
      {{#if title}}
      <label for="section1name">Rule Name:</label>
        <input type="text" name="title" value="{{title}}" required><br>
        <label for="section1">Content</label><br>
        <textarea name="body" rows="4" cols="40" required>{{body}}</textarea><br>
        {{/if}}
      {{/each}}
      <div id="add_rules_form"></div>
      <input id="add_rule" type="button" value="+">
      <input id="subtract_rule" type="button" value="-">
      <input type="hidden" name="title" value=""><br>
      <input type="hidden" name="body" value=""cols="40"></input><br>
      <input type="submit" value="Update">
    </form>
    <form class="add" action="/admin/{{user_id}}/delete/{{dependent_data.dependents_id}}" method="post">
      <input type="submit" value="Delete {{dependent_data.dependent_name}}" id="delete_button">
    </form>
  </div>
</div>
